<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistroCartas">

    <EditText
        android:id="@+id/etNombreCartas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="176dp"
        android:hint="Ingrese Nombre Carta"
        app:layout_constraintBottom_toTopOf="@+id/btnRegistradoCartas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/etPuntosA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Puntos Ataque"
        app:layout_constraintBottom_toTopOf="@+id/btnRegistradoCartas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etNombreCartas"
        app:layout_constraintVertical_bias="0.149" />

    <EditText
        android:id="@+id/etPuntosD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Puntos Defensa"
        app:layout_constraintBottom_toTopOf="@+id/btnRegistradoCartas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etPuntosA"
        app:layout_constraintVertical_bias="0.285" />

    <Button
        android:id="@+id/btnRegistradoCartas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="156dp"
        android:text="Registrar Carta"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnImagen"
        android:layout_width="131dp"
        android:layout_height="59dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="36dp"
        android:text="Seleccionar Imagen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etPuntosD"
        app:layout_constraintVertical_bias="0.046" />

    <Button
        android:id="@+id/btnMapa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="MAPA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.687"
        app:layout_constraintStart_toEndOf="@+id/btnImagen"
        app:layout_constraintTop_toBottomOf="@+id/etPuntosD"
        app:layout_constraintVertical_bias="0.127" />
</androidx.constraintlayout.widget.ConstraintLayout>